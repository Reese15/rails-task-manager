<br>
<div class="container">
  <h2>Task details:</h2>
  <div>
    <h2> <%= @task.title %> </h2>
    <p> <%= @task.details %> </p>
  </div>

   <div>
    <%= @task.completed ? "Task completed" : "Not completed yet!" %>
    <input type="checkbox" name="Completed" disabled <%= @task.completed ? 'checked' : '' %>>
  </div>


  <button type="button" class="btn btn-light">
  <%= link_to "Back to the list", tasks_path %>
  </button>

  <button type="button" class="btn btn-light">
  <%= link_to "Update", edit_path %>
  </button>
</div>

