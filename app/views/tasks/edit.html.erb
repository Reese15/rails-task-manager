<div class="container">
<h1>Edit task</h1>
<%= form_for(@task) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>
  <div>
    <p> <%= f.check_box :completed %> <%= @task.completed ? "Task completed" : "Not completed yet!" %> </p>
  </div>

<%= f.submit class: 'btn btn-primary' %>
<% end %>

</div>
